@model RentHub.ViewModels.GenreViewModel
@{
    ViewBag.Title = "GenreForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Genres"))
{
    @Html.ValidationSummary(true, "Please fix the following errors.")
    <div class="form-group">
        @Html.LabelFor(g => g.Genre.Name)
        @Html.TextBoxFor(g => g.Genre.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(g => g.Genre.Name)
    </div>

    @Html.HiddenFor(g => g.Genre.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
